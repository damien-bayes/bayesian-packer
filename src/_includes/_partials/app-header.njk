<header class="app-header">
  <div class="container">

    <!-- Deck 1: System -->
    <div class="app-header__system">
      <div class="row">
        <div class="column--6">
          <a href="javascript:">{{ translation[app.locale].ecosystem }}</a>
          <a href="https://support.baythium.com">
            {{ translation[app.locale].supportCenter }}
          </a>
        </div>

        <div class="column--6" style="text-align: right;">
          <a href="https://auth.baythium.com/sign-up">
            {{ translation[app.locale].signUp }}
          </a>
          <a href="https://auth.baythium.com/authorize?client_id=10033&redirect_uri=https://packer.baythium.com/callback&scope=4&response_type=code&state=BrcH0DStb0x35sBrhNID8qXm5SnQdYoIFz1iHfDS&locale=en">
            {{ translation[app.locale].signIn }}
          </a>
        </div>
      </div>
    </div>

    <!-- Deck 2 -->
    <div class="app-header__default">
      <div>
        <div class="app-header__brand">
          <a href="/">
            <img
              src="{{ '/' | url }}images/baythium-ecosystem-1.svg"
              alt="{{ app.name }}"
              loading="lazy"
            />
            <!-- @see: https://en.wikipedia.org/wiki/Software_release_life_cycle -->
            {{ app.name }}<span class="badge badge--secondary badge--rounded">Alpha</span>
          </a>
        </div>
      </div>
      <div>
        <div class="app-header__parallelogram">
          <!-- Language switcher -->
          <div class="language-switcher m--0">
            <span class="icon icon--globe display--none display__sm--block">
              {{ translation[app.locale].language }}:
            </span>

            <a href="javascript:" class="language-switcher__link">
              {% for lang in app.languages %}
                {{ lang.label if lang.code == app.locale else "" }}
              {% endfor %}
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Deck 3: Navigation -->
    <nav class="navigation">
      <!-- <button class="navigation__button">&#8249;</button> -->
      
      <div class="navigation__wrapper">
        {%- for navigation in navigation[ app.locale ].items -%}
          {% if loop.first %}<ul class="navigation__list">{% endif %}
          
            {%- set id = navigation.id %}
            {%- set name = navigation.name %}
            {%- set url = navigation.url %}

            <li class="navigation__item" data-navigation-id="{{ id }}">
              <a
                {% if page.url == url %} class="navigation__link navigation__link--active"
                {% else %} class="navigation__link" {% endif %}
                href="{{ url }}"
              >
                {{ name }}
              </a>
            </li>

          {% if loop.last %}</ul>{% endif %}
        {%- endfor -%}
      </div>

      <!-- <button class="navigation__button">&#8250;</button> -->
    </nav>

  </div>
</header>
