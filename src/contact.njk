<!-- Section -->
<section class="section contact">

  <!-- Card -->
  <div class="card">
    <div class="card__body">

      <!-- Headline -->
      <div class="headline headline--xl headline--labeled">
        <h1 class="headline__title">{{ title }}</h1>
        <p class="headline__description">We are committed to open communication with our community, and we welcome inquiries and feedback of all kinds.</p>
      </div>

      <p>Fill out our contact form below to get in touch with us. Please, provide as much information as possible for us to help you with your inquiry.</p>

      <!-- <bth-info title="Custom Component"></bth-info> -->

      <form
        class="form"
        action="https://getform.io/f/5278fd78-0f44-474b-bf7f-1ec1102d861d"
        method="post"
        accept-charset="UTF-8"
        enctype="multipart/form-data"
        style="margin: 0;"
        autocomplete="on">

        <!-- Input: Name -->
        <div class="form__collection">
          <label class="form__label" for="name">Name</label>
          <input
            class="form__input"
            type="text"
            name="name"
            id="name"
            required
            inputmode="text"
            enterkeyhint="next"
            onpaste="return false;"
            ondrop="return false;"
            autocomplete="name"/>
        </div>

        <!-- Input: Email -->
        <div class="form__collection">
          <label class="form__label" for="email">Email</label>
          <input
            class="form__input"
            type="email"
            name="email"
            id="email"
            required
            inputmode="email"
            enterkeyhint="next"
            placeholder="you@example.com"
            autocomplete="email"/>
          <small class="form__text">We won't share your email with anyone else</small>
        </div>

        <!-- Input: Message -->
        <div class="form__collection">
          <label class="form__label" for="message">Message</label>
          <textarea
            class="form__input"
            name="message"
            id="message"
            rows="3"
            required="required"></textarea>
        </div>

        <!-- Google reCAPTCHA -->
        <div class="g-recaptcha mb--5" data-sitekey="6Lc-EM4ZAAAAAPATY1pNUhofj7_hKQBLGLWTeXBR"></div>

        <button type="submit" class="button button--primary">Send</button>
      </form>

    </div>
  </div>

</section>
