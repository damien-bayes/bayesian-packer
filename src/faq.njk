---js
{
  layout: "_layouts/base.njk",
  title: "FAQ",
  changeFrequency: "monthly",
  priority: 0.7,
  translationKey: "faq",
  locale: "en",
  description: "Find answers to frequently asked questions. See the most common topics and more.",
  stylesheets: [],
  javascripts: []
}
---

{#
  FAQ

  File: /src/faq.njk
  Project: Baythium Packer Client
  Organization: Baythium Ecosystem: https://baythium.com
#}

<!-- Section -->
<section class="section faq">

  <div class="card">
    <div class="card__body">

      <!-- Headline -->
      <div class="headline headline--xl">
        <h1 class="headline__title">{{ title }}</h1>
        <p class="headline__description">{{ description }}</p>
      </div>

      {# Start looping through faq items #}
      {%- for faqItem in faq[app.locale].items -%}

        {%- set id = faqItem.id %}
        {%- set question = faqItem.question %}
        {%- set answer = faqItem.answer %}

        <!-- Collapse -->
        <details data-faq-id="{{ id }}" class="collapse" {% if loop.first %} open {% endif %}>
          <summary class="collapse__header">{{ question }}</summary>
          <div class="collapse__body">
            <p>{{ answer }}</p>
          </div>
        </details>

      {%- endfor -%}

    </div>
  </div>

</section>