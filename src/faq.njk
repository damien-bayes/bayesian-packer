<!-- FAQ Page -->
<section class="section-1 faq">

  <div class="card-1">
    <div class="card-1__body">

      <!-- Headline -->
      <div class="headline-1 headline-1--xl">
        <h1 class="headline-1__title">{{ title }}</h1>
        <p class="headline-1__description">Find answers to frequently asked questions. See the most common topics and more.</p>
      </div>

      {# Start looping through faq items #}
      {%- for faqItem in faq[app.locale].items -%}

        {%- set id = faqItem.id %}
        {%- set question = faqItem.question %}
        {%- set answer = faqItem.answer %}

        <details data-faq-id="{{ id }}" class="faq-pillar" {% if loop.first %} open {% endif %}>
          <summary class="faq-pillar__question">{{ question }}</summary>
          <p class="faq-pillar__answer">{{ answer }}</p>
        </details>

      {%- endfor -%}

    </div>
  </div>

</section>
