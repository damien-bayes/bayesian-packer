---
layout: "_layouts/base.njk"
title: "Home"

---

<section class="home">
  <!-- Deck 1 -->
  <div class="card">
    <div class="card__body">
      <div>
        <h1>{{ metadata.title }} <span class="badge badge--alternative">{{ metadata.version }}</span></h1>
        <h6>Built for developers in order to make technology open to the world</h6>
        <p>{{ metadata.description }}</p>

        <div class="button-collection">
          <a href="button button--outlined">Get Started</a>
          <a href="button button--primary">Github</a>
        </div>
      </div>
      <div>
        <img src="" alt="{{ metadata.title }}"/>        
      </div>    
    </div>
  </div>

  <!-- Deck 2 -->
  <div class="card">
    <div class="card__body">
      <div class="headline">
        <h2 class="headline__title">Features</h2>
        <p class="headline__description">We do the work and you stay focused on the big picture</p>
      </div>
    </div>
  </div>
</section>