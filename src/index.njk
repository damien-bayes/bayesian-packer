---js
{
  layout: "_layouts/base.njk",
  title: "Home",
  changeFrequency: "monthly",
  priority: 0.8,
  translationKey: "home",
  locale: "en",
  description: "Large-scale and secure folder and file archiver for automating your infrastructure",
  stylesheets: [],
  javascripts: ["/js/home.js"]
}
---

{# 
  Home

  File: /src/index.njk
  Project: Baythium Packer Client
  Organization: Baythium Ecosystem: https://baythium.com
#}

<!-- Section -->
<section class="section home">
  <!-- Card (Deck 1) -->
  <div class="card home__main-card">
    <div class="card__body">
      <div class="row">
        
        <!-- Subdeck 1 -->
        <div class="column__sm--6 order__sm--2 order--1">
          <div class="home__brand">
            <img src="{{ '/' | url }}images/vacuum.svg" alt="{{ app.name }}"/>  
            <p><b>Built for developers</b> in order to make technology open to the world</p>
          </div>
        </div>

        <!-- Subdeck 2 -->
        <div class="column__sm--6 order__sm--1 order--2">

          <!-- Headline -->
          <div class="headline headline--xl">
            <h1 class="headline__title">{{ app.name }}<span class="badge badge--alternative badge--rounded ml--3">{{ app.version }}</span></h1>
            <p class="headline__description">{{ app.description }}</p>
          </div>

          <!-- Button collection -->
          <div class="button-collection button-collection--left-aligned">
            <a href="/docs" class="button button--outlined-primary button--rounded button--small mr--2 mb--2"><span class="icon icon--get-started"></span>{{ translation[app.locale].documentation }}</a>
            <!-- WARNING: External link (All external links tend to open in new windows or browser tabs) -->
            <a href="https://github.com/damien-bayes/baythium-packer_client" target="_blank" rel="noopener noreferrer" class="button button--outlined-primary button--rounded button--small mr--2 mb--2"><span class="icon icon--github"></span>{{ translation[app.locale].github }}<span class="icon icon--external-link"></span></a>
            <a href="javascript:" target="_blank" class="button button--primary button--rounded button--small mb--2"><span class="icon icon--download"></span>{{ translation[app.locale].download }}</a>
          </div>

        </div>
        
      </div> 
    </div>
  </div>

  <!-- Card (Deck 2) -->
  <div class="card">
    <div class="card__body">

      <!-- Headline -->
      <div class="headline headline--lg">
        <h2 class="headline__title">Features</h2>
        <p class="headline__description">We combine many useful tools in a single package so whether you are small company, large enterprise or a government entity, we have all of your business file management needs covered</p>
      </div>

      {# Start looping through feature items #}
      {%- for item in features[app.locale].items -%}
        {% if loop.first %}<div class="row">{% endif %}

          {%- set id = item.id %}
          {%- set name = item.name %} 
          {%- set description = item.description %}
          {%- set imageUrl = item.imageUrl %}

          <div class="column__sm--6 column__md--4">
            <div class="card mx__sm--2" style="display: flex;" data-feature-id="{{ id }}">
              <img class="card__image" style="margin: 0 auto; object-fit: contain; width: 128px;" src="{{ imageUrl }}" alt="{{ name }}"/>
              <div class="card__body">
                <h3>{{ name }}</h3>
                <p>{{ description }}</p>
              </div>
            </div>
          </div>

        {% if loop.last %}</div>{% endif %}
      {%- endfor -%}

    </div>
  </div>

  <!-- Card (Deck 3) -->
  <div class="card home__github-banner">
    <div class="card__body">
      <div class="row">

        <!-- Subdeck 1 -->
        <div class="column__sm--4 text--center">
          <a href="https://github.com/damien-bayes/baythium-packer_client" target="_blank" rel="noopener noreferrer" class="button button--secondary mb--2">Join Us On Github<span class="icon icon--external-link"></span></a>
          {# Stargazer #}
          <p class="display--none">Stars: <span data-stargazer data-stargazer-username="damien-bayes" data-stargazer-repository="baythium-packer_client">0</span></p>
        </div>

        <!-- Subdeck 2 -->
        <div class="column__sm--8">
          <h3>Let's build the future of the web, together</h3>
          <p>As you know, Github is the best place to share code with friends, co-workers and complete strangers so join our team today and start collaborating</p>
        </div>

      </div>
    </div>
  </div>

</section>