---js
{
  layout: "_layouts/base.njk",
  title: "Home",
  changeFrequency: "monthly",
  priority: 0.8,
  translationKey: "home",
  locale: "en"
}
---

{# 
  Home

  Project: Baythium Packer
  File: /src/index.njk
  Initial author: Damien Bayes <damien.bayes.db@gmail.com>
#}

<!-- Home Page -->
<section class="section home">
  <!-- Deck 1 -->
  <div class="card">
    <div class="card__body">

      <div class="row">
        
        <!-- Subdeck 1 -->
        <div class="sm-column-6">
          <div class="home__brand">
            <img src="{{ '/' | url }}images/vacuum.svg" alt="{{ app.name }}"/>  
            <p><span class="badge badge--extra-small badge--primary">Built for developers</span> in order to make technology open to the world</p>
          </div>
        </div>

        <!-- Subdeck 2 -->
        <div class="sm-column-6">

          <!-- Headline -->
          <div class="headline headline--extra-large">
            <h1 class="headline__title">{{ app.name }}<span class="badge badge--alternative badge--rounded ml-3">{{ app.version }}</span></h1>
            <p class="headline__description">{{ app.description }}</p>
          </div>

          <!-- Button collection -->
          <div class="button-collection button-collection--left-aligned">
            <a class="button button--outlined-primary button--rounded mr-2 button--small"><span class="icon icon--get-started"></span>{{ translation[app.locale].documentation | capitalize }}</a>
            <a href="https://github.com/damien-bayes/baythium-packer_client" target="_blank" class="button button--outlined-primary button--rounded button--small mr-2"><span class="icon icon--github"></span>{{ translation[app.locale].github | capitalize }}</a>
            <a href="javascript:" target="_blank" class="button button--primary button--rounded button--small"><span class="icon icon--download"></span>{{ translation[app.locale].download | capitalize }}</a>
          </div>

        </div>
      </div> 
    </div>
  </div>

  <!-- Deck 2 -->
  <div class="card">
    <div class="card__body">
      <div class="headline headline--normal">
        <h2 class="headline__title">Features</h2>
        <p class="headline__description">We do the work and you stay focused on the big picture</p>
      </div>
    </div>
  </div>

</section>
