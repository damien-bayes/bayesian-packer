---js
{
  layout: "_layouts/base.njk",
  title: "Home",
  changeFrequency: "monthly",
  priority: 0.8,
  translationKey: "home",
  locale: "en",
  description: "Large-scale and secure folder and file archiver for automating your infrastructure",
  stylesheets: [],
  javascripts: ["/js/baythium-stargazer.js"]
}
---

{# 
  Home

  Project: Baythium Packer
  File: /src/index.njk
  Initial author: Damien Bayes <damien.bayes.db@gmail.com>
#}

<!-- Home Page -->
<section class="section-1 home">

  <!-- Deck 1 -->
  <div class="card-1 home__main-card">
    <div class="card-1__body">
      <div class="row-1">
        
        <!-- Subdeck 1 -->
        <div class="sm-column-1--6 sm-order-1--2 order-1--1">
          <div class="home__brand">
            <img src="{{ '/' | url }}images/vacuum.svg" alt="{{ app.name }}"/>  
            <p><b>Built for developers</b> in order to make technology open to the world</p>
          </div>
        </div>

        <!-- Subdeck 2 -->
        <div class="sm-column-1--6 sm-order-1--1 order-1--2">

          <!-- Headline -->
          <div class="headline-1 headline-1--xl">
            <h1 class="headline-1__title">{{ app.name }}<span class="badge-1 badge-1--alternative badge-1--rounded ml-1--3">{{ app.version }}</span></h1>
            <p class="headline-1__description">{{ app.description }}</p>
          </div>

          <!-- Button collection -->
          <div class="button-collection-1 button-collection-1--left-aligned">
            <a href="/documentation" class="button-1 button-1--outlined-primary button-1--rounded button-1--small mr-1--2 mb-1--2"><span class="icon icon--get-started"></span>{{ translation[app.locale].documentation | capitalize }}</a>
            <!-- WARNING: External link (All external links tend to open in new windows or browser tabs) -->
            <a href="https://github.com/damien-bayes/baythium-packer_client" target="_blank" rel="noopener noreferrer" class="button-1 button-1--outlined-primary button-1--rounded button-1--small mr-1--2 mb-1--2"><span class="icon icon--github"></span>{{ translation[app.locale].github | capitalize }}<span class="icon icon--external-link"></span></a>
            <a href="javascript:" target="_blank" class="button-1 button-1--primary button-1--rounded button-1--small mb-1--2"><span class="icon icon--download"></span>{{ translation[app.locale].download | capitalize }}</a>
          </div>

        </div>
        
      </div> 
    </div>
  </div>

  <!-- Deck 2 -->
  <div class="card-1">
    <div class="card-1__body">

      <!-- Headline -->
      <div class="headline-1 headline-1--lg">
        <h2 class="headline-1__title">Features</h2>
        <p class="headline-1__description">We combine many useful tools in a single package so whether you are small company, large enterprise or a government entity, we have all of your business file management needs covered</p>
      </div>

      {# Start looping through faq items #}
      {%- for item in feature[app.locale].items -%}
        {% if loop.first %}<div class="row-1">{% endif %}

          {%- set id = item.id %}
          {%- set name = item.name %}
          {%- set description = item.description %}
          {%- set imageUrl = item.imageUrl %}

          <div class="sm-column-1--6 md-column-1--4">
            <div class="card-1 mx-sm-1--2" data-feature-id="{{ id }}">
              <img class="card-1__image" style="opacity: .2; filter: grayscale(100%);" src="{{ imageUrl }}" alt="{{ name }}"/>
              <div class="card-1__body">
                <h3>{{ name }}</h3>
                <p>{{ description }}</p>
              </div>
            </div>
          </div>

        {% if loop.last %}</div>{% endif %}
      {%- endfor -%}

    </div>
  </div>

  <!-- Deck 3 -->
  <div class="card-1 home__github-banner">
    <div class="card-1__body">
      <div class="row-1">

        <!-- Subdeck 1 -->
        <div class="sm-column-1--4 text-1--center">
          <a href="https://github.com/damien-bayes/baythium-packer_client" target="_blank" rel="noopener noreferrer" class="button-1 button-1--secondary mb-1--2">Join Us On Github<span class="icon icon--external-link"></span></a>
          <p>Stars: <span id="starsCount">0</span></p>
        </div>

        <!-- Subdeck 2 -->
        <div class="sm-column-1--8">
          <h3>Let's build the future of the web, together</h3>
          <p>As you know, Github is the best place to share code with friends, co-workers and complete strangers so join our team today and start collaborating</p>
        </div>

      </div>
    </div>
  </div>

</section>
